<% if notice != nil %>
  <br>
  <div class="alert alert-info" id="notice" role="alert"><%= notice %></div>
<% end %>

<header class="main-header">
  <h1 class="main-name left-title">Users</h1>
  <div class="new-user-btn">
    <%= link_to 'New User' , new_user_path , class: "btn btn-lg btn-info" %>
  </div>
  <div class="clearfix"></div>
</header> <!-- end main-header -->

<br>

<div class="table-responsive">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<hr>
<br>